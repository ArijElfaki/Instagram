<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:textColor="@android:color/black"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvcomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/ivComment"
        android:layout_marginStart="-124dp"
        android:layout_toEndOf="@+id/ivComment"
        android:text="TextView"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivLikes"
        android:layout_marginEnd="129dp"
        app:srcCompat="@drawable/ufi_comment" />

    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tvcomment"
        android:layout_marginStart="113dp"
        android:text="TextView"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivLikes"
        android:layout_width="42dp"
        android:layout_height="42dp"

        android:layout_below="@+id/tvdescript"
        android:layout_marginEnd="-100dp"
        android:layout_toStartOf="@+id/likes"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvdescript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/postImage"
        android:layout_marginStart="70dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</RelativeLayout>